<!-- End Google Tag Manager -->
<link rel="stylesheet" href="https://s3-ap-southeast-1.amazonaws.com/waytogo-assets/waytogo-staging/stylesheets/application.css"/>
 <style>
        .list-inline>li {
          display: inline-block;
          padding-right: 5px;
          padding-left: 5px;
          position: relative;
        }
        .airline-info h3{
          font-size: 18px;
        }
        .airline-info{
          padding: 0 0 20px;
        }
        .airline-info table.airline-info-table,.airline-info .fare-table,.other-info{
          width: 100%;
          font-size: 14px;
          border: 1px solid #d9d9d9;
          border-collapse: collapse;
          
        }
        .airline-info table.airline-info-table td,.fare-table td,.other-info td{
          padding: 10px;
          border-bottom: 1px solid #d9d9d9;
        }
        .fare-table th,.other-info th{
          padding: 10px;
          background: #eeeeee54;
          border-bottom: 1px solid #d9d9d9;
          font-weight: 500;
        }
        .airline-info table.airline-info-table td:nth-child(odd){
          background: #eeeeee54;
          font-weight: 500;
          border-right: 1px solid #d9d9d9;
        }
        .airline-info .booking {
          padding: 4px 15px;
        }
        .normal-list .dep-time,.normal-list .arr-time{
          width: 32%;
          display: inline-block;
          vertical-align: top;
        }
        .schedule-divide{
          width: 30px;
          display: inline-block;
          font-size: 18px;
          font-weight: 600;
          position: relative;
          top: 5px;
        }
        .normal-list .timing-duration{

        }
        @media Screen and (max-width: 468px){
          .airline-info{
            width: 100%;
            overflow-x: auto;
          }
          .airline-info table{
            width: 700px!important;
          }
        }
        </style>
</head>
<body>
<!-- Google Tag Manager (noscript) -->
	<noscript>
		<iframe  src="https://www.googletagmanager.com/ns.html?id=GTM-T9S432"
            height="0" width="0" >
    </iframe>
  </noscript>

<!-- End Google Tag Manager (noscript) -->
	<section id="flights-nav">
		<div class="container-fluid">
			<div class="ctCol ctProducts mview-header">
				<a class="ctBrand" href="/">
					<span class="cleartripLogo" title="Homepage">Home</span>
				</a>
				<ul class="productLinks hasProductIcons">
					<li class="flightApp">
						<a rel="bToolTip" Flights href="/flights">
							<span class="productIcon flights">Flights</span>
						</a>
					</li>
					<li class="hotelApp">
						<a rel="bToolTip" Hotels href="/hotels">
							<span class="productIcon hotels">Hotels</span>
						</a>
					</li>
					<li class="packagesApp">
						<a rel="bToolTip" Packages href="/packages">
							<span class="productIcon packages">Packages</span>
						</a>
					</li>
					<li class="trainsApp">
						<a rel="bToolTip" title="Trains" href="/trains">
							<span class="productIcon trains">Trains</span>
						</a>
					</li>
				</ul>
				<div class="Menuicon visible-xs pull-right"> <span></span> <span></span> <span></span></div>
			</div>
			<div class="ctCol ctCenter mview-center">&nbsp;</div>
			<div class="ctCol">
				<ul class="list-inline language">
					<li class="en first active">
						<a href="https://www.cleartrip.com/flight-schedule/hi/bangalore-new-delhi-flights.html" lang="hi">हिन्दी</a>
					</li>
					<li>|</li>
					<li>
						<a href="https://www.cleartrip.com/flight-schedule/<%= schedule_layout_values["dep_city_name_formated"]%>-<%= schedule_layout_values["arr_city_name_formated"]%>" lang="en">English</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="clearfix"></div>
	</section>
	<section id="content">
    <div class="container-fluid">
			<ol itemscope itemtype="https://schema.org/BreadcrumbList" class="list-inline bread-crumb no-padding">
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a  itemprop="item" href="/flights" title="<%= t('flight_schedule.breadcrumb_flight_title') %>"><span  itemprop="name"><%= t('breadcrumb.flights') %></span>
          </a>
          <meta itemprop="position" content="1" />
        </li>

        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <a  itemprop="item"  href="/flight-schedule/flight-schedules-domestic.html" title="<%= t('flight_schedule.breadcrumb_flight_title') %>" itemprop="url">
            <span itemprop="name">
              <%= t('flight_schedule.breadcrumb_second_dom') %></span>
            </a>
            <meta itemprop="position" content="2" />
        </li>
        <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
          <span itemprop="name" class="first"><%= t('flight_schedule.breadcrumb_title', dep_city_name: dep_city_name, arr_city_name: arr_city_name,:arr_city_code=>arr_city_code,:dep_city_code=>dep_city_code,:arr_city_code=>arr_city_code) %></span>
          <meta itemprop="position" content="3" />
        </li>
      </ol>

      <h1><%= t('flight_schedule.header_1', dep_city_name: dep_city_name, arr_city_name: arr_city_name,:arr_city_code=>schedule_layout_values["arr_city_code"],:dep_city_code=>schedule_layout_values["dep_city_code"]) %></h1>
			<%= render :partial=>"common/search_widget" %>
			<div class="col-lg-9 col-md-9 col-sm-12 mobile-view pad-lzero" id="flight-schedule">
	  		<div class="list-box">
          <div class="calendar-new" >
            <h2 class="pull-left"> <%= t('cheap_air_fare', dep_city_name: dep_city_name, arr_city_name: arr_city_name) %> </h2>
            <div class="text-right pull-right full-calendar">
              <span id="fullCalendarShow"><i class="fa fa-calendar"></i> Full Calendar</span>
            </div>
            <div class="clearfix"></div>
            <div id="calendar">
              <div id="calender_display"></div>
            </div>
            <div id="horCalendar">
              <div class="flexslider" >
                <ul class="list-inline calendar-v1 slides" id="calendarScroll">
                  <li id="slider">

                  </li>
                </ul>
              </div>
              <div class="f11">
                Note: Cleartrip Lowest Air Fares Calendar provides an indication of prices (per person) for a range of dates, so that you can see the cheapest air fares easily. The air fares you see here may not be available at the time you try and book.
              </div>
            </div>
            </div><!--/calendar-new-->
	  			<%= render :partial=> "flight_schedule_routes/shared/en/schedule_routes_table",locals: {schedule_layout_values: schedule_layout_values,dep_city_name: dep_city_name,arr_city_name: arr_city_name}%>
					<div class="return_link">
			      Get airfare and schedule for return <a href="/flight-schedule/<%= schedule_layout_values["return_url"] %>"> <%= arr_city_name %> <%= dep_city_name %></a> flights.
			  	</div>
	      </div>
        <div class="content-desc">
          <%= render :partial => "flight_schedule_routes/contents/templatized_content_en_in",locals: {schedule_layout_values: schedule_layout_values,dep_city_name: dep_city_name,arr_city_name: arr_city_name} %>
          <%= render :partial =>  "flight_schedule_routes/shared/en/route_information",locals: {schedule_layout_values: schedule_layout_values,dep_city_name: dep_city_name,arr_city_name: arr_city_name} %>
        </div>
    	</div>
      <div id="Rside-bar">
          <div class="col-lg-3 col-md-3 col-sm-12 pad-rzero side-bar">
              <div class="blocks banner-section">
                <div id="banner">
                  <a target="_blank"><img></a>
                </div>
              </div>
              <%= render partial: "flight_schedule_routes/shared/en/top_airlines_from",locals: {schedule_layout_values: schedule_layout_values,top_airlines: schedule_layout_values["top_dom_airlines"],dep_city_name: dep_city_name,use_helper: use_helper,arr_city_name: arr_city_name} %>
          </div>
        </div>
    </div>
  </section>
</body>
</html>