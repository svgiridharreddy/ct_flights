 <style>
        .list-inline>li {
          display: inline-block;
          padding-right: 5px;
          padding-left: 5px;
          position: relative;
        }
        .airline-info h3{
          font-size: 18px;
        }
        .airline-info{
          padding: 0 0 20px;
        }
        .airline-info table.airline-info-table,.airline-info .fare-table,.other-info{
          width: 100%;
          font-size: 14px;
          border: 1px solid #d9d9d9;
          border-collapse: collapse;
          
        }
        .airline-info table.airline-info-table td,.fare-table td,.other-info td{
          padding: 10px;
          border-bottom: 1px solid #d9d9d9;
        }
        .fare-table th,.other-info th{
          padding: 10px;
          background: #eeeeee54;
          border-bottom: 1px solid #d9d9d9;
          font-weight: 500;
        }
        .airline-info table.airline-info-table td:nth-child(odd){
          background: #eeeeee54;
          font-weight: 500;
          border-right: 1px solid #d9d9d9;
        }
        .airline-info .booking {
          padding: 4px 15px;
        }
        .normal-list .dep-time,.normal-list .arr-time{
          width: 32%;
          display: inline-block;
          vertical-align: top;
        }
        .schedule-divide{
          width: 30px;
          display: inline-block;
          font-size: 18px;
          font-weight: 600;
          position: relative;
          top: 5px;
        }
        .normal-list .timing-duration{

        }
        @media Screen and (max-width: 468px){
          .airline-info{
            width: 100%;
            overflow-x: auto;
          }
          .airline-info table{
            width: 700px!important;
          }
        }
        </style>
</head>
