
<link rel="canonical" href="<%= get_domain + request.path %>">
<%if page_number == 1 %>
	<%  COUNTRY_LIST.uniq.each do |country_code| %>
	<link rel="alternate" hreflang="<%= "en-#{country_code.downcase}"%>" href="<%= "#{host_name(country_code)}/#{@page_type}/#{@file_name}"%>">
	    <% if country_code == "IN" %>
			<link rel="alternate" hreflang="<%= "hi-#{country_code.downcase}"%>" href="<%= "#{host_name(country_code)}/#{@page_type}/hi/#{@file_name}"%>">
	    <% else %>
			<link rel="alternate" hreflang="<%= "ar-#{country_code.downcase}"%>" href="<%= "#{host_name(country_code)}/#{@page_type}/ar/#{@file_name}"%>">
	    <% end %>
	<% end %>
<% end %>
